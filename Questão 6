#include <stdio.h>
#include <locale.h>
  int main(){
  	setlocale (LC_ALL, "Portuguese_Brazil");
  	
  	float base, altura, area;
  	printf("Calculadora de area do triângulo\n\n");
  	
  	printf("Digite a base: ");
  	scanf("%f", &base);
  	
  	printf("Digite a altura: ");
  	scanf("%f", &altura);
  	
  	area = (base * altura)/2;
  	
  	printf("A área desse triângulo é %.00f", area);
  	
  	return 0;
  }
